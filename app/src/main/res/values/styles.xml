<resources>

    <style name="app" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="app.login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="background">
        <item name="android:background">#020213</item>
    </style>

    <style name="background_error">
        <item name="android:background">#b30000</item>
    </style>

    <style name="background_warning">
        <item name="android:background">#d7d001</item>
    </style>

    <style name="background_success">
        <item name="android:background">#00b324</item>
    </style>

    <style name="logo" parent="app.login">
        <item name="android:textSize">40dp</item>
    </style>

    <style name="keyboard" parent="app.login">
        <item name="android:background">#80474a55</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="btn_login" parent="app.login">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="keyboard_item">
        <item name="android:background">@drawable/key</item>
        <item name="android:textColor">#818698</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="keyboard_label">
        <item name="android:textColor">@drawable/key_text</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="keyboard_pin">
        <item name="android:textSize">30dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="btn_action">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="app.admin">
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="text_header" parent="app.admin">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="text_header_details" parent="text_header">
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text" parent="app.admin">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="btn_options" parent="app.login">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="btn_exit" parent="app.login">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">#E8370C</item>
    </style>
</resources>
